<!DOCTYPE html>
<html lang="en">

<head>
  <% include ../partials/head %>
</head>

<body>
  <% include ../partials/menu %>

  <div class="container-fluid bg-3 text-center">
    <h3><%= title %></h3><br>
    <div class="row">
      <div class="col-sm-2">
        <div class="form-group text-center">
                <div id="success"></div>
                <a href="/survey/new" id="sendMessageButton" class="btn btn-primary btn-rounded btn-xl text-uppercase" type="submit">New Survey</a>
        </div>

      </div>
      <div class="col-sm-10">
        <table class="table table-hover text-center">
          <thead>
            <tr>
              <th>Title</th>
              <th>Question 1</th>
              <th>Question 2</th>
              <th>Question 3</th>
              <th>Active Survey</th>
              <th>&nbsp;</th>
              <th>&nbsp;</th>
            </tr>
          </thead>

          <tbody>
            <% for(var i = 0; i < surveys.length; i++) {%>

            <tr>
              <td><a href="/survey/<%= surveys[i]._id%>/edit" id="sendMessageButton" class="text-uppercase" type="submit"><%= surveys[i].title %></a></td>
              <td><%= surveys[i].q1 %></td>
              <td><%= surveys[i].q2 %></td>
              <td><%= surveys[i].q3 %></td>
              <td><strong>

              <%= surveys[i].active ? surveys[i].active : '' %>

            </strong>
              </td>

              <td><a href="/survey/<%= surveys[i]._id%>/active" id="sendMessageButton" class="btn btn-primary btn-rounded btn-xl text-uppercase" type="submit">Active Survey</a></td>
              <td>
                <a href="/answer/<%= surveys[i]._id%>/index" id="sendMessageButton" class="btn btn-primary btn-rounded btn-xl text-uppercase" type="submit">Survey Answers</a>
              </td>
              <td>
                <form action="/survey/<%= surveys[i]._id%>/delete" id="sendMessageButton" method="post">
                <button type="submit" class="btn btn-warning btn-rounded btn-xl text-uppercase">Delete</button>
                </form></td>
            </tr>
            <% } %>

          </tbody>
        </table>
      </div>
    </div>
  </div>

</body>
<% include ../partials/script %>

</html>
